# Environment Variables for Render Deployment
# Copy these to your Render service's Environment Variables section

# Python Configuration
PYTHON_VERSION=3.11.0

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production

# Node Backend URL (if you have a separate Node.js service)
NODE_BACKEND_URL=https://your-node-service.onrender.com

# Port Configuration (Render sets this automatically)
PORT=10000

# Optional: If you need API keys for external services
# OPENAI_API_KEY=your_openai_key_here
# GITHUB_TOKEN=your_github_token_here

# Gunicorn Configuration
WEB_CONCURRENCY=4
WORKERS=4
